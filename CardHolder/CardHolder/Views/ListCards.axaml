<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:CardHolder.ViewModels"
             mc:Ignorable="d" d:DesignWidth="360" d:DesignHeight="800"
             x:Class="CardHolder.Views.ListCards"
             x:DataType="vm:ListCardsViewModel">
    <UserControl.DataContext>
        <vm:ListCardsViewModel></vm:ListCardsViewModel>
    </UserControl.DataContext>
    <Grid>
        <ScrollViewer>
            <ItemsControl ItemsSource="{Binding Cards}"
                          HorizontalAlignment="Center">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel></WrapPanel>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>
        
        <Button Command="{Binding AddCommand}"
                Width="40" Height="40"
                CornerRadius="10"
                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Margin="15"
                FontSize="20"
                FontWeight="Bold"
                HorizontalContentAlignment="Center">+</Button>
    </Grid>
</UserControl>
