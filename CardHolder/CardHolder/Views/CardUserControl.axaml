<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" Width="360" Height="250"
             x:Class="CardHolder.Views.CardUserControl">
    <Grid>
        <Border Margin="20 10 20 15" 
                Background="White"
                CornerRadius="15"
                ClipToBounds="True">
            <Border.Effect>
                <DropShadowEffect Opacity="0.8" BlurRadius="14" OffsetX="3" OffsetY="3"></DropShadowEffect>
            </Border.Effect>
            <Grid>
                
            </Grid>
        </Border>
    </Grid>
</UserControl>
