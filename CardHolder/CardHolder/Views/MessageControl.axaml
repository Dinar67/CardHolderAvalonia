<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" MinWidth="200" MinHeight="150"
             x:Class="CardHolder.Views.MessageControl"
             HorizontalAlignment="Stretch">
    <Grid Background="Transparent">
        <Border Background="White" CornerRadius="10" ClipToBounds="True">
            <ScrollViewer>
                <StackPanel Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock x:Name="MessageTb" TextWrapping="Wrap" HorizontalAlignment="Center"></TextBlock>
                    <Button x:Name="OkBtn" Click="OkBtn_Click" HorizontalAlignment="Center" Width="80" Height="30">
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold">
                            Ok
                        </TextBlock>
                    </Button>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
